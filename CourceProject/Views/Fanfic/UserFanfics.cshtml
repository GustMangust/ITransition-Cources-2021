@model (List<Fanfic> fanfics,List<Fandom> fandoms)
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
    <head>
        <link type="text/css" rel="stylesheet" href="~/css/all-fanfics.css" media="all" />

    </head>
    <a asp-controller="Fanfic" asp-action="UserFanfics" asp-route-sortBy="titleAsc">Название по алфавиту</a>
    <a asp-controller="Fanfic" asp-action="UserFanfics" asp-route-sortBy="titleDesc">Название в обратном порядке</a>
    <div class="row justify-content-md-center">

        <div class="col-md-auto">
            @foreach(Fanfic f in Model.fanfics) {
            <div class="card" style="width: 36rem;">
                <div class="card-body">
                    <h4 class="card-title">@f.Title</h4>
                    <h6 class="card-subtitle mb-2 text-muted">@Model.fandoms.FirstOrDefault(x => x.Id == f.Fandom_Id).Name</h6>
                    <div class="card-text"><div class="fanfic-description">@f.Description</div> <a asp-controller="Fanfic" class="card-link" asp-action="FanficDetails" asp-route-id="@f.Id">Подробнее</a></div>
                </div>
            </div>
            }
        </div>
        </div>
