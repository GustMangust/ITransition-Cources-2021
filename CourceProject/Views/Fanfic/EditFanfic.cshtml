@model CourceProject.ViewModel.EditFanficViewModel
    <head runat="server">

        @section Scripts{
            <script src="Scripts/jquery-3.6.0.js"></script>
            <script src="Scripts/jquery-3.6.0.min.js"></script>
           <script>
           </script>
            }
        </head>
    <body>
<div>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label>Title</label>
            <input asp-for="Title" value="@ViewBag.Fanfic.Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Description</label>
            <input asp-for="Description" value="@ViewBag.Fanfic.Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Tags. Example: "tagname1 tagname2 tagname3"</label>
            <input asp-for="Tags" value="@ViewBag.Tags" class="form-control" />
        </div>
        <div class="form-group">
            <label>Fandom</label>
            @Html.DropDownListFor(model => model.FandomId, ViewBag.Id as SelectList)
        </div>
        <input asp-for="UserId" value="@ViewBag.Fanfic.User_Id" type="hidden" />
        <input asp-for="Id" value="@ViewBag.Fanfic.Id" type="hidden" />
        <button type="submit" class="btn-primary">Подтвердить</button>
    </form>
</div>

    </body>